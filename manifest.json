{
    "manifest_version": 2,
    "name": "Web Time Tracker",
    "version":"1.0.0",
    "description":"Keeps track of time spent on various domains",
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        },
        "default_title":"Web Time Tracker"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webNavigation"
    ]
}